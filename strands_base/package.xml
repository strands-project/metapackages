<package>
  <name>strands_base</name>
  <version>0.0.14</version>
  <description>A metapackage to aggregate several packages.</description>
  <maintainer email="marc@hanheide.net">Marc Hanheide</maintainer>
  <license>MIT</license>

  <url type="repository">https://github.com/strands-project/metapackages</url>
  <url type="bugtracker">https://github.com/strands-project/metapackages/issues</url>

  <buildtool_depend>catkin</buildtool_depend>

  <run_depend>strands_bringup</run_depend>
  
  <run_depend>strands_navigation</run_depend>
  <run_depend>strands_recovery_behaviours</run_depend>
  <run_depend>strands_movebase</run_depend>
  <run_depend>strands_apps</run_depend>
  <run_depend>strands_ui</run_depend>
  <run_depend>strands_perception_people</run_depend>
  <run_depend>strands_hri</run_depend>
  
  <run_depend>scitos_apps</run_depend>
  <run_depend>scitos_common</run_depend>

  <run_depend>strands_webtools</run_depend>
  <run_depend>strands_social</run_depend>

  <!-- For task executive framework -->
  <run_depend>task_executor</run_depend>
  <run_depend>routine_behaviours</run_depend>
  
  <export>
    <metapackage/>
  </export>
</package>
